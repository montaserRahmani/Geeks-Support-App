{
  "productName": "Geeks Support App",
  "directories": {
    "output": "release/"
  },
  "appId": "com.geeks.support.app",
  "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
  ],
  "extraFiles" : [
    "src/assets/images"
  ],
  "nsis" : {
    "createDesktopShortcut" : "always",
    "createStartMenuShortcut" : true
  },
  "win": {
    "icon": "./src/assets/images/geeks_icon.ico",
    "target": [
      "msi"
    ]
  },
  "mac": {
    "icon": "./src/assets/images/logos/geeks-logo-512.png",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "./src/assets/images/geeks_icon.ico",
    "target": [
      "AppImage"
    ]
  }
}
